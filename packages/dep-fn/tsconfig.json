{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "sourceMap": false,
    "strictNullChecks": false,
    "target": "esnext",
    "lib": [
      "es7",
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}